<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Frontend" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Color primario -->
        <item name="colorPrimary">@color/light_green</item>
        <item name="colorPrimaryVariant">@color/light_green</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Color secundario -->
        <item name="colorSecondary">@color/sea_green</item>
        <item name="colorSecondaryVariant">@color/sea_green</item>
        <item name="colorOnSecondary">@color/dark_green</item>

        <item name="textAppearanceBody1">@color/white</item>

        <item name="colorTertiary">@color/medium_purple</item>
        <item name="colorOnTertiary">@color/dark_purple</item>

        <!-- Color de la barra de estado -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondaryVariant</item>
        <item name="android:colorBackground">?attr/textAppearanceBody1</item>
        <item name="android:text">?attr/colorSecondaryVariant</item>
    </style>

    <style name="Theme.Frontend" parent="Base.Theme.Frontend" />
</resources>